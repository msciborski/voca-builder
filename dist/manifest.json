{
  "manifest_version": 2,

  "name": "Voca-builder",
  "description": "Voca-builder - your memos",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Memos"
  },
  "background": {
    "scripts": ["./background.js"]
  },
  "icons": {
    "16": "logo-small.png",
    "48": "logo-small.png",
    "128": "logo-small.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "contextMenus"
  ]
}