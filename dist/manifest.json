{
  "manifest_version": 2,

  "name": "Voca-builder",
  "description": "Voca-builder - your memos",
  "version": "0.0.1",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+M",
        "mac": "Command+M",
        "chromeos": "Ctrl+M",
        "linux": "Ctrl+M"
      }
    }
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Memos"
  },
  "background": {
    "scripts": ["./background.js"],
    "presisten": false
  },
  "icons": {
    "16": "logo-small.png",
    "48": "logo-small.png",
    "128": "logo-small.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "contextMenus"
  ]
}